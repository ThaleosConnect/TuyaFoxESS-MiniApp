/**
 * Global styles for the FoxESS Pairing mini app
 */

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20px;
}

.btn {
  display: inline-block;
  margin: 10px 0;
  padding: 10px 20px;
  border-radius: 4px;
  background-color: #1890ff;
  color: white;
  text-align: center;
  font-size: 16px;
  transition: all 0.3s ease;
}

.btn:active {
  opacity: 0.8;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}

.card {
  margin: 10px 0;
  padding: 15px;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.text-center {
  text-align: center;
}

.text-primary {
  color: #1890ff;
}

.mt-10 {
  margin-top: 10px;
}

.mb-10 {
  margin-bottom: 10px;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100px;
}

.error-text {
  color: #ff4d4f;
}

.success-text {
  color: #52c41a;
}
