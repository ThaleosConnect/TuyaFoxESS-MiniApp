.debug-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.85);
  color: #fff;
  font-family: monospace;
  font-size: 24rpx;
  z-index: 9999;
  transition: height 0.3s;
  border-top: 2rpx solid #888;
}

.debug-panel.hidden {
  display: none;
}

.debug-panel.collapsed {
  height: 80rpx;
}

.debug-panel.expanded {
  height: 600rpx;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  height: 60rpx;
  background-color: #222;
  border-bottom: 2rpx solid #444;
}

.debug-title {
  font-weight: bold;
  color: #2ecc71;
}

.debug-actions {
  display: flex;
  gap: 10rpx;
}

.debug-logs {
  height: calc(100% - 80rpx);
  padding: 10rpx;
  overflow-y: auto;
}

.log-entry {
  padding: 6rpx 0;
  word-break: break-all;
  line-height: 1.4;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.log-timestamp {
  color: #aaa;
  margin-right: 6rpx;
}

.log-level {
  font-weight: bold;
  margin-right: 10rpx;
}

.log-info .log-level {
  color: #3498db;
}

.log-debug .log-level {
  color: #2ecc71;
}

.log-warn .log-level {
  color: #f39c12;
}

.log-error .log-level {
  color: #e74c3c;
}

.log-packet .log-level {
  color: #9b59b6;
}

.log-message {
  color: #eee;
}
